@page
@model RazorPagesAK.Pages.Product.IndexModel
@{
}

<h1 class="text-danger">@Model.Message</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">
                Id
            </th>
            <th scope="col">
                Name
            </th>
            <th scope="col">
                Price
            </th>
            <th scope="col">
                #
            </th>
            <th scope="col">
                #
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <th scope="row">@item.Name</th>
                <th scope="row">@item.Price</th>
                <th scope="row"><a class="btn btn-outline-primary">Edit</a></th>
                <th scope="row"><a class="btn btn-outline-primary">Delete</a></th>
            </tr>
        }
    </tbody>
</table>

<form class="col-5" method="post">
    <div class="mb-3">
        <label class="form-label">Product Name</label>
        <input asp-for="Product.Name" />
    </div>
    <div class="mb-3">
        <label class="form-label">Product Price</label>
        <input asp-for="Product.Price" />
    </div>
    <button type="submit" class="btn btn-primary">Add New Product</button>
</form>